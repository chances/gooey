{
  "name": "gooey",
  "description": "A GUI library implementing the W3C Web Platform.",
  "authors": [ "Chance Snow <git@chancesnow.me>" ],
  "license": "MIT",
  "copyright": "Copyright Â© 2021, Chance Snow",
  "targetType": "staticLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "importPaths": [ "source", "source/gooey/parsers"],
  "excludedSourceFiles": [
    "source/events/**/*.d"
  ],
  "systemDependencies": "meson >= 1.3.1, ninja >= 1.11.0, cmake >= 3.26.3",
	"dependencies": {
    "descartes": {
      "repository": "git+https://github.com/chances/descartes-d.git",
      "version": "83de6514d2a5b64672a91cd544c441c98dc22dbc"
    },
    "eventcore": "~>0.9.20"
	},
  "-ddoxFilterArgs": [
    "--min-protection=Protected",
    "--only-documented"
  ],
  "preGenerateCommands-posix": [ "meson setup build" ],
  "preBuildCommands-posix": [ "ninja -C build" ],
  "dflags-posix": [
    "-P-I$GOOEY_PACKAGE_DIR/subprojects/lexbor-2.3.0/source"
  ],
  "lflags-posix": [
    "$GOOEY_PACKAGE_DIR/subprojects/lexbor-2.3.0/build/liblexbor_static.a",
    "$GOOEY_PACKAGE_DIR/build/libgooey.a"
  ],
  "configurations": [
    {
      "name": "library"
    },
    {
      "name": "unittest"
    },
    {
      "name": "software-renderer",
      "versions": ["Blend2D"],
      "dependencies": {
        "bindbc-blend2d": "~>0.0.1127"
      },
      "subConfigurations": {
        "bindbc-blend2d": "static"
      },
      "preGenerateCommands-posix": [
        "make blend2d"
      ],
      "lflags-posix": [
        "-lstdc++",
        "-Llib/blend2d/build"
      ]
    },
    {
      "name": "gpu-renderer"
    }
  ]
}

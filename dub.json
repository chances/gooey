  "targetType": "staticLibrary",
  "targetPath": "bin",
  "sourcePaths": [ "source" ],
  "excludedSourceFiles": [
    "source/events/**/*.d"
  ],
	"dependencies": {
    "eventcore": "~>0.9.20",
		"libdominator": "~>1.1.7",
		"pc4d": "~>1.0.6"
	},
  "configurations": [
    {
      "name": "software-renderer",
      "versions": ["Blend2D"],
      "dependencies": {
        "bindbc-blend2d": "~>0.0.1127"
      },
      "subConfigurations": {
        "bindbc-blend2d": "static"
      },
      "preGenerateCommands-posix": [
        "make blend2d"
      ],
      "lflags-posix": [
        "-lstdc++",
        "-Llib/blend2d/build"
      ]
    },
    {
      "name": "gpu-renderer"
    }
  ]
